<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".paginaPrincipal"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Nous-k Studio"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/botonFavs"
        android:src="@mipmap/favoritos"
        android:padding="0dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/botonTodo"
        android:layout_alignStart="@+id/botonTodo" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/botonTodo"
        android:src="@mipmap/todo"
        android:adjustViewBounds="false"
        android:padding="0dp"
        android:layout_above="@+id/botonFavs"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botonMas"
        android:src="@android:drawable/ic_input_add"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
